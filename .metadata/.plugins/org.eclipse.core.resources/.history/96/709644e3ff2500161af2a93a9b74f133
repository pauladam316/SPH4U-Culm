	/**
	 * Open the window.
	 */
	public void open() {
		Display display = Display.getDefault();
		createContents();
		shell.open();
		shell.layout();
		while (!shell.isDisposed()) {
			if (drawMode == 0) {
				drawLine();
				redBox.setVisible(false);
				blueBox.setVisible(false);
			}
			else if (drawMode == 1) {
				drawEquation();
				 if (!isPaused && !isMoving) {
					 redBox.setVisible(true);
					 blueBox.setVisible(true);
				 }
				 else {
					 redBox.setVisible(false);
					 blueBox.setVisible(false);
				 }
			}
			if (drawMode == 2) {
				drawLine();
				redBox.setVisible(false);
				blueBox.setVisible(false);
			}
			canvas.redraw();
			canvas.update();
			sliderChecker();
			if (!display.readAndDispatch()) {
				//display.sleep();
			}
		}
		
	}

