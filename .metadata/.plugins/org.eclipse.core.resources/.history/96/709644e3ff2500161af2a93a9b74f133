		            		if (line.equals("-")) {
		            			break;
		            		}
		            		else {
		            			interference.add(new Point(Integer.parseInt(line),(Integer.parseInt(br.readLine()))));		            		
		            		}
	            		}
		            	scale2.setSelection(Integer.parseInt(br.readLine()));
